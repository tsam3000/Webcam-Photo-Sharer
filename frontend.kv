<CameraScreen>:
    GridLayout:
        cols: 1
        Camera:
            resolution: (640, 480)
            play: False
            id: camera
        Button:
            text: 'Start Camera'
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            id: start_button
        Button:
            text: 'Capture'
            on_press: root.capture()

<ImageScreen>:
    GridLayout:
        cols: 1
        Image:
            id: img
        Button:
            text: 'Create Sharable Link'
        Label:
            text: ''
        GridLayout:
            cols: 2
            Button:
                text: 'Copy Link'
            Button:
                text: 'Open Link'

<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'